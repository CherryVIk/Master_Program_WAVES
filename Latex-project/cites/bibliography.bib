@article{leblond_acoustic_2014,
	title = {Acoustic monitoring of gas emissions from the seafloor. {Part} {I}: quantifying the volumetric flow of bubbles},
	volume = {35},
	issn = {1573-0581},
	shorttitle = {Acoustic monitoring of gas emissions from the seafloor. {Part} {I}},
